{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="margin-top: 30px">
        <table id="products" class="table table-striped table-bordered" style="width:100%">
            <thead>
            <th>Id</th>
            <th>Exchange</th>
            <th>SymbolPair</th>
            <th>DateTime</th>
            <th>High</th>
            <th>Low</th>
            <th>Close</th>
            <th>Volume</th>
            <th>Sma20</th>
            <th>Sma</th>
            <th>BbUpper</th>
            <th>BbLower</th>
            <th>Ema</th>
            <th>Macd</th>
            <th>MacdSignal</th>
            <th>CloseGainLoss</th>
            <th>Rsi</th>
            <th>Edit</th>
            <th>Delete</th>
            </thead>
            <tbody>
            {% for data in allData %}
                <tr>
                    <td>{{ data.id}}</td>
                    <td>{{ data.exchange.name }}</td>
                    <td>{{ data.symbolPair.symbol }}</td>
                    <td>{{ data.dateTime }}</td>
                    <td>{{ data.high }}</td>
                    <td>{{ data.low }}</td>
                    <td>{{ data.close }}</td>
                    <td>{{ data.volume }}</td>
                    <td>{{ data.sma20 }}</td>
                    <td>{{ data.sma }}</td>
                    <td>{{ data.bbUpper }}</td>
                    <td>{{ data.bbLower }}</td>
                    <td>{{ data.ema }}</td>
                    <td>{{ data.macd }}</td>
                    <td>{{ data.macdSignal }}</td>
                    <td>{{ data.closeGainLoss }}</td>
                    <td>{{ data.rsi }}</td>
                    <td><a href="{{ path('editData', {'id': data.id}) }}">Edit</a></td>
                    <td><a href="{{ path('deleteData', {'id': data.id}) }}">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#products').DataTable();
        } );
    </script>
{% endblock %}
